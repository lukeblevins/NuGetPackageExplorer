<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="../Application/Colors.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style x:Key="SectionGridStyle"
		   TargetType="Grid">
		<Setter Property="CornerRadius" Value="3" />
		<Setter Property="Background" Value="{ThemeResource SurfaceThemeBrush87}" />
	</Style>
	<Style x:Key="SearchBarSectionGridStyle"
		   TargetType="Grid"
		   BasedOn="{StaticResource SectionGridStyle}">
		<Setter Property="Background" Value="{ThemeResource SurfaceThemeBrush87}" />
		<Setter Property="Padding" Value="20" />
		<Setter Property="ColumnSpacing" Value="20" />
	</Style>
</ResourceDictionary>
